package com.SpringL.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import javax.sql.DataSource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.SpringL.model.Employee;

@Repository("dao")
public class EmployeeDaoImp implements IEmployee {
	
	@Autowired
	private DataSource dataSource;
	
	private String sql = "SELECT * FROM Employees";
	
	List<Employee> employ = null;
	
	@Override
	public List<Employee> getEmployeesInfo() {

		try {
			
			Connection connect = dataSource.getConnection();
			
			PreparedStatement pstmt = connect.prepareStatement(sql);
			
			ResultSet rs = pstmt.executeQuery();
			
			employ = new ArrayList<>();
			
			while(rs.next()){
				
				Employee emp = new Employee();
				
//				Integer i = rs.getInt(1);
//				emp.setId(i);
//				
//				String name = rs.getString(2);
//				emp.setName(name);
				
				emp.setId(rs.getInt(1));
				emp.setName(rs.getInt(2));
				emp.setCity(rs.getInt(3));
				
				employ.add(emp);
			}
			
		}
		catch(Exception e){
			
			e.printStackTrace();
		}
		
		return null;
	}
}


